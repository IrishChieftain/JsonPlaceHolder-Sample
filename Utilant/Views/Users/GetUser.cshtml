@model Utilant.Models.UserViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("GetPosts", "Posts", new { userId = Model.Id}, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">

                <div class="panel profile-wrap">
                    <header class="panel-heading clearfix">
                        <h3 class="profile-title">@Html.DisplayFor(modelItem => modelItem.Name)</h3>
                    </header>

                    <div class="panel-body row">
                        <div class="col-md-6">
                            <div class="profile-info">
                                <h4>User Info</h4>
                                <ul class="list-unstyled">
                                    <li>
                                        <i class="fa fa-user-o"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Name: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Name)
                                        </div>                                          
                                    </li>
                                    <li>
                                        <i class="fa fa-user-circle"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">User Name: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Username)
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-envelope-o"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Email: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Email)
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-address-card-o"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Address: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Address.Street)<br />
                                            @Html.DisplayFor(modelItem => modelItem.Address.Suite)<br />
                                            @Html.DisplayFor(modelItem => modelItem.Address.City)<br />
                                            @Html.DisplayFor(modelItem => modelItem.Address.Zipcode)
                                                
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-map-o"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Geo</span>
                                            @Html.DisplayFor(modelItem => modelItem.Address.Geo)
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-phone-square"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Phone: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Phone)
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-globe"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Website: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Website)
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div col-md-6>
                            <div class="profile-info">
                                <h4>Company</h4>
                                <ul class="list-unstyled">
                                    <li>
                                        <i class="fa fa-building-o"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Name: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Company.Name)
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-bullhorn"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Catch Phrase: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Company.CatchPhrase)
                                        </div>
                                    </li>
                                    <li>
                                        <i class="fa fa-briefcase"></i>
                                        <div class="p-i-list">
                                            <span class="text-muted">Business: </span>
                                            @Html.DisplayFor(modelItem => modelItem.Company.Bs)
                                        </div>
                                    </li>
                                </ul>
                                <button class="btn btn-info" type="submit">Posts</button>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ActionLink("Back to Albums", "GetAlbums", "Albums", null, null)

            </div>
        </div>
    </div>
}
